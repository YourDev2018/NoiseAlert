<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraint_fundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Activity_Principal">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_principal_layout_top"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:background="@drawable/color_degrade_top_principal"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="Monitor Sonoro"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_principal_config" />

        <ImageButton
            android:id="@+id/activity_principal_menu_sobre_nos"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="false"
            android:background="@mipmap/menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <ImageButton
            android:id="@+id/activity_principal_config"

            android:layout_width="35dp"

            android:layout_height="35dp"

            android:layout_marginStart="16dp"
            android:background="@mipmap/settings_cogwheel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_principal_layout_bot"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/color_degrade_principal_bot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Sensibilidade do microfone"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/activity_principal_progress_bar_top"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/activity_principal_progress_bar_top" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />


        <ImageView
            android:id="@+id/activity_principal_image_view_microfone"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginBottom="24dp"
            android:layout_marginStart="20dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/activity_principal_phone" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <TextView
            android:id="@+id/activity_principal_text_view_on_off"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/color_degrade_activity_principal_text_view_ligado"
            android:gravity="center"


            android:text="@string/principal_text_view_ligado"
            android:textAllCaps="true"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_image_view_microfone"
            app:layout_constraintStart_toStartOf="@+id/activity_principal_image_view_microfone"
            app:layout_constraintTop_toBottomOf="@+id/activity_principal_image_view_microfone" />

        <ProgressBar
            android:id="@+id/activity_principal_progress_bar_bot"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"

            android:indeterminate="false"
            android:progressDrawable="@anim/progress_bar_drawable_activity_principal"
            android:background="@drawable/progress_bar_activity_principal"
            android:progress="90"
            android:max="100"

            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


        <TextView
            android:id="@+id/activity_principal_text_view_porcentagem_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="0%"
            android:textColor="#fff"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_progress_bar_bot"
            app:layout_constraintStart_toStartOf="@+id/activity_principal_progress_bar_bot"
            app:layout_constraintTop_toTopOf="@+id/activity_principal_progress_bar_bot" />

        <ProgressBar
            android:id="@+id/activity_principal_progress_bar_top"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:indeterminate="false"
            android:progressDrawable="@anim/progress_bar_drawable_activity_principal"
            android:background="@drawable/progress_bar_activity_principal"
            android:progress="90"
            android:max="100"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintVertical_bias="1.0" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />


        <ImageView
            android:id="@+id/activity_principal_image_view_add"
            android:layout_width="45dp"
            android:layout_height="0dp"


            android:layout_marginEnd="12dp"


            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintStart_toStartOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintTop_toTopOf="@+id/activity_principal_progress_bar_top"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/activity_principal_equalizador_add" />

        <ImageView
            android:id="@+id/activity_principal_image_view_remove"
            android:layout_width="45dp"
            android:layout_height="0dp"


            android:layout_marginBottom="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"


            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"

            app:layout_constraintBottom_toBottomOf="@+id/activity_principal_progress_bar_top"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintStart_toStartOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintTop_toBottomOf="@+id/activity_principal_text_view_porcentagem"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/activity_principal_equalizador_remove" />

        <TextView
            android:id="@+id/activity_principal_text_view_porcentagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90%"
            android:textColor="#fff"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_principal_progress_bar_top"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_progress_bar_top"
            app:layout_constraintStart_toStartOf="@+id/activity_principal_progress_bar_top"
            app:layout_constraintTop_toTopOf="@+id/activity_principal_progress_bar_top" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Equalizador"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_principal_progress_bar_bot"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/activity_principal_progress_bar_bot" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>