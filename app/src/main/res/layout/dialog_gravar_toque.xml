<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="14dp"
    android:background="@color/dialog_background">


    <TextView
        android:id="@+id/dialog_gravar_toque_cancelar"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Cancelar"
        android:textColor="#808080"
        android:background="@drawable/act_settings_dialog_ripple_ok"
        app:layout_constraintEnd_toStartOf="@+id/dialog_gravar_toque_salvar"
        app:layout_constraintTop_toTopOf="@+id/dialog_gravar_toque_salvar" />

    <TextView
        android:id="@+id/dialog_gravar_toque_salvar"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Salvar"
        android:background="@drawable/act_settings_dialog_ripple_ok"
        android:textColor="#f77062"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_gravar_toque_play" />

    <TextView
        android:id="@+id/dialog_gravar_toque_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Modo de som"

        android:textColor="@color/dialog_titulo"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Chronometer
        android:id="@+id/dialog_gravar_toque_cronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:textColor="#f77062"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_gravar_toque_titulo" />


    <ImageView
        android:id="@+id/dialog_but_circle_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:elevation="25dp"
        android:translationX="0dp"

        android:translationY="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintEnd_toEndOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintStart_toStartOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintTop_toTopOf="@+id/dialog_gravar_toque_play"
        android:background="@drawable/circle_degrade_dialog_gravar_toque" />


    <ImageView
        android:id="@+id/dialog_but_circle_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/circle_dialog_gravar_toque_degrade_stop"
        android:elevation="25dp"
        android:translationX="0dp"
        android:translationY="6dp"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintEnd_toEndOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialog_gravar_toque_play"
        app:layout_constraintTop_toTopOf="@+id/dialog_gravar_toque_play"
  />

    <ImageView
        android:id="@+id/dialog_gravar_toque_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle_dialog_gravar_toque_degrade"
        android:elevation="14dp"
        android:tag="on"
        android:translationX="0dp"
        android:translationY="6dp"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_gravar_toque_cronometro" />


</android.support.constraint.ConstraintLayout>