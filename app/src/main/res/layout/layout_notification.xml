<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:background="#151515">


    <ImageView
        android:id="@+id/notification_phone"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_activity_principal_phon"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/notification_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Microfone On"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/notification_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_phone"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/notification_toque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/activity_configuracoes_modo_som_subtitulo_personalizado"
        app:layout_constraintTop_toBottomOf="@+id/notification_titulo"
        tools:layout_editor_absoluteX="24dp" />
</android.support.constraint.ConstraintLayout>