<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="yourdev.noisealert">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/logo_noise_alert"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_noise_alert"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".Activity.Activity_Inicial_Carregamento">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Activity_Apresentacao"
            />
        <activity android:name=".Activity.Activity_Principal" android:screenOrientation="portrait" />
        <activity android:name=".Activity.Activity_Sobre_Nos" android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Activity_Configuracoes" android:screenOrientation="portrait"/>
      <!--  <service  android:name=".Class.VibratorService"/>-->
    </application>

</manifest>